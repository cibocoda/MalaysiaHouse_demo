<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.fiveteam.malaysiahouse2.FirstPageFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/company_title"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/SV_p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_above="@+id/block">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/VP_p1_ad1"
                android:layout_width="match_parent"
                android:layout_height="240dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="IT'S NICE TO MEET YOU."
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/TV_adm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VP_p1_ad1"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="精選住宅"
                android:textColor="@color/orange"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/TV_adm_title"
                android:text="FEATURED"
                android:textColor="@color/yellow"
                android:textSize="14sp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/IV_pic_1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/TV_adm_title"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@drawable/p1_pic_1"
                android:scaleType="fitXY"
                android:clickable="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/p1_pic_intro"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_1"
                android:layout_alignRight="@+id/IV_pic_1"
                android:layout_alignEnd="@+id/IV_pic_1"
                android:scaleType="fitEnd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_1"
                android:layout_alignRight="@+id/IV_pic_1"
                android:layout_alignEnd="@+id/IV_pic_1"
                android:text="最新刊登"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/IV_pic_2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/IV_pic_1"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@drawable/p1_pic_2"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/p1_pic_intro"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_2"
                android:layout_alignRight="@+id/IV_pic_2"
                android:layout_alignEnd="@+id/IV_pic_2"
                android:scaleType="fitEnd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_2"
                android:layout_alignRight="@+id/IV_pic_2"
                android:layout_alignEnd="@+id/IV_pic_2"
                android:text="3D互動看房"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/IV_pic_3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/IV_pic_2"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@drawable/p1_pic_3"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/p1_pic_intro"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_3"
                android:layout_alignRight="@+id/IV_pic_3"
                android:layout_alignEnd="@+id/IV_pic_3"
                android:scaleType="fitEnd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@+id/IV_pic_3"
                android:layout_alignRight="@+id/IV_pic_3"
                android:layout_alignEnd="@+id/IV_pic_3"
                android:text="市中心"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/block"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
